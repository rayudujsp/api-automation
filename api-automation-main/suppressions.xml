<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">
<suppressions>
    <!-- Suppress Javadoc requirements for unit tests -->
    <suppress checks="JavadocType" files="src/test/.+"/>
    <suppress checks="JavadocMethod" files="src/test/.+"/>
    <suppress checks="JavadocPackage" files="src/test/.+"/>
    <!-- ====================================================================== -->
    <!-- Skip Javadoc for... -->
    <!-- ====================================================================== -->
    <suppress checks="JavadocType" files="src/main/java/.+"/>
    <suppress checks="JavadocMethod" files="src/main/java/.+"/>
    <suppress checks="JavadocPackage" files="src/main/java/.+"/>
    <suppress checks="JavadocStyle" files="src/main/java/.+"/>
    <!-- ====================================================================== -->
    <!-- Constructor not required in unit tests -->
    <!-- ====================================================================== -->
    <suppress checks="MissingCtor" files="src/test/.+"/>
    <!-- ====================================================================== -->
    <!-- Suppress magic number checks in unit tests -->
    <!-- ====================================================================== -->
    <suppress checks="MagicNumber" files="src/test/.+"/>
    <suppress checks="MagicNumber" files="src/main/java/com/.+"/>
    <!-- ====================================================================== -->
    <!-- Suppress method length check in unit tests -->
    <!-- ====================================================================== -->
    <suppress checks="MethodLength" files="src/test/.+"/>
    <!-- ====================================================================== -->
    <!-- ModifierOrder -->
    <!-- ====================================================================== -->
    <!-- ====================================================================== -->
    <!-- RegexpHeader -->
    <!-- ====================================================================== -->
    <!-- Suppress the copyright notices when including 3rd party source -->
    <suppress checks="RegexpHeader" files="src/main/java/.+"/>
    <!-- ====================================================================== -->
    <!-- RedundantThrowsCheck -->
    <!-- ====================================================================== -->
    <!-- ====================================================================== -->
    <!-- Suppress generated code -->
    <!-- ====================================================================== -->
    <suppress checks="." files="target/clover/.+"/>
    <!-- ====================================================================== -->
    <!-- 3rd party -->
    <!-- ====================================================================== -->
    <suppress checks="." files="BinaryPlistParser\.java"/>
</suppressions>
